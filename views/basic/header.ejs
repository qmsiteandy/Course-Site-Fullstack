<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- style -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
    />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <!-- fontawesome -->
    <script src="https://kit.fontawesome.com/021123a8d9.js"></script>
    <!-- jquery -->
    <script src="https://code.jquery.com/jquery-3.6.4.slim.js"></script>
    <!-- axios -->
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container-fluid">
        <a class="navbar-brand" href="/"> Course Site </a>
        <div class="customer-area navbar-nav mr-5">
          <ul class="navbar-nav me-auto">
            <li class="nav-item">
              <a class="nav-link" href="/login" id="login">登入</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/mycourse" id="mycourse">我的課程</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/backend" id="backend">後臺管理</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/" id="logout" onclick="Logout()"
                >登出</a
              >
            </li>
          </ul>
          <a class="btn verticle-center ml-4 mr-3" href="/shopcart">
            <i class="fas fa-shopping-cart"></i>
            <span id="shopcart">購物車(0)</span>
          </a>
        </div>
      </div>
    </nav>
  </body>

  <script>
    $(document).ready(function init() {
      const user = JSON.parse(localStorage.getItem("user"));
      // 未登入狀態
      if (!user) {
        $("#logout").hide();
        $("#mycourse").hide();
        $("#backend").hide();
        $("#shopcart").hide();
      } else {
        $("#login").hide();
        console.log(user.permission == 0);
        if (user.permission == 0) {
          $("#backend").hide();
        }
        if (user.permission == 1) {
          $("#mycourse").hide();
        }
      }
    });

    function Logout() {
      localStorage.removeItem("user");
      deleteAllCookies();

      axios.post("/api/user/logout", {}).catch((err) => {
        alert(err.response.data.error);
      });
    }

    function deleteAllCookies() {
      var cookies = document.cookie.split(";");
      for (var i = 0; i < cookies.length; i++) {
        var cookie = cookies[i];
        var eqPos = cookie.indexOf("=");
        var name = eqPos > -1 ? cookie.substr(0, eqPos) : cookie;
        document.cookie = name + "=;expires=Thu, 01 Jan 1970 00:00:00 GMT";
      }
    }
  </script>
</html>
