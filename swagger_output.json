{
  "openapi": "3.0.0",
  "info": {
    "version": "1.0.0",
    "title": "Course-Site",
    "description": ""
  },
  "servers": [
    { "url": "http://localhost:3000", "description": "Local server" }
  ],
  "tags": [
    { "name": "user", "description": "帳號相關操作" },
    { "name": "admin", "description": "管理員相關操作" },
    { "name": "course", "description": "課程相關操作" },
    { "name": "mycourse", "description": "我的課程相關操作" },
    { "name": "cart", "description": "購物車相關操作" },
    { "name": "ecpay", "description": "綠界付款相關操作" }
  ],
  "paths": {
    "/api/user": {
      "post": {
        "summary": "註冊帳號",
        "tags": ["user"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "name": { "type": "string" },
                  "account": { "type": "string" },
                  "password": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "註冊成功",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "msg": { "type": "string", "example": "註冊成功" },
                    "result": {
                      "type": "object",
                      "properties": { "insertId": { "type": "integer" } }
                    }
                  }
                }
              }
            }
          },
          "400": { "description": "此帳號已存在" }
        }
      }
    },
    "/api/user/{id}": {
      "delete": {
        "tags": ["user"],
        "summary": "刪除帳號",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "id for the user account",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "Authorization",
            "in": "header",
            "required": true,
            "description": "JWT token",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": { "description": "刪除成功" },
          "401": {
            "description": "未授權 (無效 Token)"
          },
          "403": {
            "description": "權限不足"
          }
        }
      }
    },
    "/api/user/login": {
      "post": {
        "tags": ["user"],
        "summary": "帳號登入",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "account": { "type": "string" },
                  "password": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "登入成功",
            "content": {
              "plain/text": {
                "schema": {
                  "properties": {
                    "msg": { "type": "string", "example": "登入成功" },
                    "user": {
                      "type": "object",
                      "properties": {
                        "id": { "type": "string" },
                        "name": { "type": "string" },
                        "permission": {
                          "type": "integer",
                          "description": "使用者身分代號： 0學生、1教師、2管理者"
                        }
                      }
                    },
                    "token": {
                      "type": "string",
                      "example": "JWT eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpZCI6MTI2LCJuYW1lIjoiMTIzIiwicGVybWlzc2lvbiI6MCwiaWF0IjoxNjgxMjkwNTUzfQ._AUHI3hN8SIDkGq0eaw5FFCt--rzsFZaLd0NMJcH3jI"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "缺少帳號或密碼"
          },
          "404": { "description": "帳號或密碼錯誤" }
        }
      }
    },
    "/api/admin/teacherRegister": {
      "post": {
        "tags": ["admin"],
        "summary": "新增教師帳號",
        "parameters": [
          {
            "name": "Authorization",
            "in": "header",
            "required": true,
            "description": "JWT token",
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "name": { "type": "string" },
                  "account": { "type": "string" },
                  "password": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "教師註冊成功" },
          "400": { "description": "此教師帳號已存在" },
          "401": {
            "description": "未授權 (無效 Token)"
          },
          "403": {
            "description": "權限不足"
          }
        }
      }
    }
  }
}
